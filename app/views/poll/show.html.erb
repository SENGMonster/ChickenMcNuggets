<h1>Umfrage: <%= @poll.questin %></h1>

<% @poll.answer_possibilities.each do |answer_possibility| %>
	<p>
		<%= answer_possibility.value %>
		<% @count = 0 %>
		<% @answers.each do |answer| %>
			<% if (answer.answer_possibility_id == answer_possibility.id) %>
				<% @count+= 1 %>
			<% end%>
		<% end %>
		<%= @count %>
	</p>
<% end %>
