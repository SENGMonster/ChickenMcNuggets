<h1><%= @poll.title %></h1>
<h2> <%= @poll.question %> </h2>

<% if @poll.poll_type.name == "open"%>
	<ul>
		<% @poll.answers.each do |answer| %>
				<li><%= answer.value %></li>		
		<%end %>
	</ul>
	
<% else %>
	<img src="<%= @chart_url  %>" /> 
	<img src="<%= @bar_url  %>" /> 
	<table>
		<% @poll.answer_possibilities.each do |answer_possibility| %>
			<tr>
				<td><%= answer_possibility.value %></td>
				<td><%= answer_possibility.answers.count %></td>
			</tr>
		<% end %>
	</table>
<% end %>


